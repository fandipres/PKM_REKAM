<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserWelcomeActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:src="@drawable/welcome"></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to REKAM Apps"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/orange_700"
        android:textSize="@dimen/titleText"
        android:textStyle="bold"></TextView>

    <Button
        android:layout_width="@dimen/button"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:onClick="buatAkun"
        android:text="Buat Akun"></Button>

    <Button
        android:layout_width="@dimen/button"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="masukAkun"
        android:text="Masuk"></Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:text="Develop by F23 Team"
            android:textAlignment="center"
            android:textSize="8dp"
            tools:ignore="RtlCompat"></TextView>
    </LinearLayout>

</LinearLayout>