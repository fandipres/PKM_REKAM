<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginTop="@dimen/marginPost"
        android:layout_marginRight="@dimen/marginPost"
        android:layout_marginLeft="@dimen/marginPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/add_camera" />
        <Spinner
            android:id="@+id/spinnerTipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"></Spinner>
        <Button
            android:id="@+id/btnChoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="140dp"
            android:text="Choose Image"></Button>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/marginPost"
        android:layout_marginRight="@dimen/marginPost"
        android:layout_marginLeft="@dimen/marginPost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/namaKamera"
            android:textSize="@dimen/hintText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Kamera"></EditText>
        <EditText
            android:id="@+id/hargaKamera"
            android:textSize="@dimen/hintText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Harga Kamera"></EditText>
        <EditText
            android:id="@+id/deskripsiKamera"
            android:textSize="@dimen/hintText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Deskripsi"
            android:maxLines="20"></EditText>
        <Button
            android:id="@+id/btnUpdate"
            android:onClick="updateKamera"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/antarElemen"
            android:layout_width="@dimen/button"
            android:layout_height="wrap_content"
            android:text="Update"></Button>
    </LinearLayout>
</LinearLayout>